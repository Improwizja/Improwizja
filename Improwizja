<section id="services">
    <h2>Usługi</h2>
    <form id="servicesForm">
        <label><input type="checkbox" name="service" value="Sesja ślubna"> Sesja ślubna</label><br>
        <label><input type="checkbox" name="service" value="Portret"> Portret</label><br>
        <label><input type="checkbox" name="service" value="Fotografia krajobrazowa"> Fotografia krajobrazowa</label><br>
        <!-- Dodaj więcej usług -->
        <button type="button" onclick="createOffer()">Stwórz ofertę</button>
    </form>
    <div id="offer"></div>
</section>

<script>
    function createOffer() {
        const services = document.querySelectorAll('input[name="service"]:checked');
        let selectedServices = [];
        services.forEach((service) => {
            selectedServices.push(service.value);
        });
        document.getElementById('offer').innerText = 'Wybrane usługi: ' + selectedServices.join(', ');
    }
</script>
